<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="204dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backbroad">

            <TextView
                android:id="@+id/text_location_rcv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="@color/font"
                android:layout_marginStart="10dp"
                android:text="Location" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/purple_700"
                android:id="@+id/show_location_rcv_name"
                app:layout_constraintTop_toTopOf="@id/text_location_rcv_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/font"
                android:id="@+id/text_row_rcv_name"
                android:text="แถว"
                app:layout_constraintTop_toBottomOf="@id/text_location_rcv_name"
                app:layout_constraintStart_toStartOf="@id/text_location_rcv_name"
                android:layout_marginTop="10dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/purple_700"
                android:id="@+id/show_row_rcv_name"
                app:layout_constraintTop_toTopOf="@id/text_row_rcv_name"
                app:layout_constraintEnd_toEndOf="@id/show_location_rcv_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/font"
                android:id="@+id/text_column_rcv_name"
                app:layout_constraintTop_toBottomOf="@id/text_row_rcv_name"
                app:layout_constraintStart_toStartOf="@id/text_location_rcv_name"
                android:text="หมุด"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="50dp"
                android:textSize="18dp"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/show_column_rcv_name"
                app:layout_constraintTop_toTopOf="@id/text_column_rcv_name"
                app:layout_constraintEnd_toEndOf="@id/show_location_rcv_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/font"
                android:id="@+id/text_otherdata_rcv_name"
                app:layout_constraintTop_toBottomOf="@id/text_column_rcv_name"
                app:layout_constraintStart_toStartOf="@id/text_location_rcv_name"
                android:layout_marginTop="10dp"
                android:text="ข้อมูลเพิ่มเติม"/>

            <TextView
                android:id="@+id/show_otherdata_rcv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/purple_700"
                android:textSize="18dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_otherdata_rcv_name"
                app:layout_constraintTop_toBottomOf="@id/text_otherdata_rcv_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>